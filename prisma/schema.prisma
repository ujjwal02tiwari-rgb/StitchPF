generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // runtime (PgBouncer/6543)
  directUrl = env("DIRECT_URL")     // migrations (Session pooler/5432)
}

model User {
  id        String   @id @default(cuid())
  handle    String   @unique
  name      String
  email     String?  @unique
  avatarB64 String?
  bio       String?   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profiles  Profile[]
}

model Profile {
  id        String   @id @default(cuid())
  handle    String   @unique

  fullName  String?     
  title     String?     
  bio       String?     
  location  String?     
  website   String?     
  avatar    String?     
  theme     String      @default("ocean") 
  accent    String?     
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  links     Link[]                

  @@index([userId]) 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Link {
  id        String  @id @default(cuid())
  profileId String
  label     String
  url       String

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}
