generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // runtime (PgBouncer/6543)
  directUrl = env("DIRECT_URL")     // migrations (Session pooler/5432)
}

model User {
  id        String   @id @default(cuid())
  handle    String   @unique
  name      String
  email     String?  @unique
  avatarB64 String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profiles  Profile[]
}

model Profile {
  id        String   @id @default(cuid())
  handle    String   @unique

  fullName  String?     // used as data.fullName
  title     String?     // used as data.title
  bio       String?     // used as data.bio
  location  String?     // used as data.location
  website   String?     // used as data.website
  avatar    String?     // used as data.avatar
  theme     String      @default("ocean") // used as data.theme
  accent    String?     // used as data.accent (if you set it)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Link {
  id        String  @id @default(cuid())
  profileId String
  label     String
  url       String

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}
